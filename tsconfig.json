{
  "compilerOptions": {
    "target": "ES2016", 
    "module": "commonjs", 
    "lib": [
      "es6"
    ], 
    "allowJs": true, 
    "outDir": "build", 
    "rootDir": "src", 
    "strict": true, 
    "noImplicitAny": true, 
    "moduleResolution": "node", 
    "types": [
      "reflect-metadata",
      "jest",
      "vitest/globals"
    ], 
    "esModuleInterop": true, 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    "resolveJsonModule": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true 
  }
}