{
  "name": "sorci",
  "version": "0.1.2",
  "description": "Library to be able to do event sourcing without worrying about the aggregate.",
  "main": "src/index.ts",
  "author": "Sraleik",
  "license": "MIT",
  "scripts": {
    "build": "tsc && vite build",
    "test:unit": "vitest --config ./vitest.config.ts --single-thread"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sraleik/sorci.git"
  },
  "bugs": {
    "url": "https://github.com/sraleik/sorci/issues"
  },
  "keywords": [
    "event-sourcing",
    "postgres"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "module": "./dist/sorci.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sorci.js",
      "require": "./dist/sorci.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "postgres": "^3.3.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "nanoid": "^4.0.2",
    "testcontainers": "^9.9.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.32.2",
    "vitest-mock-extended": "^1.1.3"
  }
}
